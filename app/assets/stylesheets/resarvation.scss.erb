.new_resarv_page{
    margin-top:2vw;
    padding:0 auto;
    text-align: center;
}

.room_inf{
    float:left;
    text-align:left;
}

.resarv_icon{
    border-radius:50%;
    margin-top:1vw;
    text-align:left;
}

.no_resarv_icon{
    width:7vw;
    height:auto;
    text-align:left;
    margin-top:1vw;
}

.room_detail{
    display:flex;
}

.room_inf_name{
    font-weight:bold;
    font-size:3vw;
    margin-top:1vw;
}

.room_inf_loc{
    color:gray;
    font-size:2vw;
}

.room_inf_com{
    font-size:2vw;
    border-bottom:1px solid gray;
    border-top:1px solid gray;
    padding:1vw 0;
}

.resarv_form{
    border: 1px solid gray;
    display: block;
    float:right;
    text-align:left;
    padding:10px;
}

.comp_table_box{
    width:50%;
    margin-right:auto;
    margin-left:auto;
}

.conf_box{
  width:30vw;
  border:1px solid gray;
  border-radius: 2vw;
  margin-right:auto;
  margin-left:auto;
  padding:3vw;

  
}

.conf_box ul{
  padding:0; 
}

.conf_inf{
  font-size:2vw;
  font-weight:bold;
  border-bottom: 2px solid gray;
}

.com_title{
  margin-top:2vw;
  margin-left:20vw;
}